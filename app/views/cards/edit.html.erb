<h1>カードを編集</h1>
<%= form_with model: @card, url: board_list_card_path(@board.id, @list.id, @card.id), method: :patch, local: true do |f| %>
  <%= f.label :task, "カード名" %>
  <%= f.text_field :task %>
  <%= f.submit "変更", class: 'btn' %>
<% end %>
<%= button_to "削除", board_list_card_path(@board.id, @list.id, @card.id), { method: :delete, form: { data: { confirm: "本当に削除しますか？" } } } %>
