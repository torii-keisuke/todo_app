<div class=" items-center px-5 lg:px-20">
  <div class="max-w-md p-5 mx-auto my-3 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
    <div class="text-center">
      <% if current_user.present? %>
        <% if @boards.present? %>
          <h1 class="mt-6 text-3xl font-extrabold text-neutral-600"><%= current_user.name%>のボード一覧</h1>

            <div class="relative mt-4 mb-1">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                  <span class="px-2 text-neutral-600 bg-white"></span>
              </div>
            </div>

          <% @boards.each do |board| %>
            <div class="mt-2">
              <%= link_to board.title, board_path(board.id), class: "text-lg font-medium text-neutral-600 p-3" %>
              <%= button_to "退会", group_path(@group.ids), { method: :delete, class: "px-8 py-2 mt-3 mb-4 text-base font-medium text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" } %><hr>
            </div>
          <% end %>
        <% else %>
          <h1>新規ボードを作成してください。</h1>
          <%= link_to "ボードを作成する", new_board_path, class: "text-blue-700" %>
        <% end %>
      <% else %>
        <h1><%= link_to "ログイン", new_user_session_path, class: "text-blue-700" %>してください。初めてご利用される方は、<%= link_to "新規登録", new_user_registration_path, class: "text-blue-700" %>してください。</h1>
      <% end %>
    </div>
  </div>
</div>
